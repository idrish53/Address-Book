@{
    ViewData["Title"] = "State_list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AddressBook1.Areas.LOC_State.Models.LOC_StateModel
<div class="row">
    <div class="col-md-12">
        <h4>@TempData["StateInsertMsg"]</h4>
        <form method="post" asp-controller="LOC_State" asp-action="save" enctype="multipart/form-data">
            @Html.HiddenFor(x=>x.StateID)
            @Html.HiddenFor(x=>x.PhotoPath)
            <div class="form-group">
                <label><span class="text-danger">*</span>Country Name</label>
                @*<input type="int" class="form-control" asp-for="CountryID" placeholder="Enter Country ID" />*@
                <select class="form-control" asp-for="CountryID" asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))">
                    <option>Select Country</option>
                </select>
            </div>
            <div class="form-group">
                <label><span class="text-danger">*</span>State Name</label>
                <input type="text" class="form-control" asp-for="StateName" placeholder="Enter State Name"/>
                <span asp-validation-for="StateName" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label><span class="text-danger">*</span>State Code</label>
                <input type="nvarchar"  class="form-control" asp-for="StateCode" placeholder="Enter State Code"/>
                <span asp-validation-for="StateCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label><span class="text-danger">*</span>PhotoPath</label>
                <input type="file" class="form-control" asp-for="File" placeholder="Upload File" />
            </div>
@*             <div class="form-group">
                <label>Creation Date</label>
                <input type="date" class="form-control" asp-for="CreationDate"/>
            </div>
             <div class="form-group">
                <label>Modification Date</label>
                <input type="date" class="form-control" asp-for="ModificationDate"/>
            </div>*@
            <hr/>
            <div>
                <input type="submit" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-controller="LOC_State" asp-action="Index" class="btn btn-danger">Cancel</a>
</div>